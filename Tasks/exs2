func minCuts(for people: Int) -> Int { //функция принимает один целочисленны аргумент - количестве людей (количество кусочков рулета) и возвращает целочисленный аргумент - количество разрезов
    var cuts = 0 
    var pieces = 1
    
    while pieces < people { //цикл с уловием - если количество кусочков меньше количества людей
        cuts += 1
        pieces *= 2
    }
    
    return cuts
}

// Чтение количества участников (людей на кофе-брейк)
if let input = readLine(), let n = Int(input), n > 0 { //считываем данные с клавиатуры, извлекаем их и проверяем на условие больше нуля
    let result = minCuts(for: n) //вызов функции, считающей разрезы
    print(result)
} else {
    print("Ошибка: введите положительное целое число.") //ошибка если не ввели верные данные
}
